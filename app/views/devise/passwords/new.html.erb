<h2>Forgot your password?</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "nice" }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %>
  <%= f.email_field :email, class: "input-text" %></div>

  <div><%= f.submit "Send me reset password instructions", class: std_button %></div>
<% end %>

<%= render :partial => "devise/shared/links" %>
