<h1>Listing purchases</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Amount</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @purchases.each do |purchase| %>
  <tr>
    <td><%= purchase.description %></td>
    <td><%= purchase.amount %></td>
    <td><%= link_to purchase.user.name, purchase.user %></td>
    <td><%= link_to 'Show', purchase %></td>
    <td><%= link_to 'Edit', edit_purchase_path(purchase) %></td>
    <td><%= link_to 'Destroy', purchase, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Purchase', new_purchase_path %>

<br />

<% tag_cloud(@tags, %(1 2 3 4)) do |tag, level| %>
  <%= link_to tag.name,
      tagged_purchases_path(tag.name),
      :class => "tag#{level}" %>
<% end %>

