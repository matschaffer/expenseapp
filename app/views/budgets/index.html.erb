<% @budgets.each do |budget| %>
  <tr>
    <td><%= budget.user %></td>
    <td><%= budget.amount %></td>
    <td><%= link_to 'Show', budget %></td>
    <td><%= link_to 'Edit', edit_budget_path(budget) %></td>
    <td><%= link_to 'Destroy', budget, confirm: 'Are you sure?', method: :delete %></td>
